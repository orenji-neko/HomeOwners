@{
    ViewData["Title"] = "Forum";
}

<div class="min-h-screen bg-gray-50 mt-30">
    <!-- Forum Header -->
    <div class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Community Forums</h1>
                    <p class="mt-2 text-sm text-gray-600">Connect, share, and learn with your neighbors</p>
                </div>
                <div class="mt-4 md:mt-0">
                    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                        </svg>
                        New Discussion
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Main Forum Content -->
            <div class="lg:w-2/3">
                <!-- Search and Filter -->
                <div class="bg-white rounded-lg shadow p-4 mb-6">
                    <div class="flex flex-col md:flex-row gap-4">
                        <div class="flex-1">
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <input type="text" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm" placeholder="Search discussions...">
                            </div>
                        </div>
                        <div class="flex space-x-2 overflow-x-auto pb-2">
                            <button class="whitespace-nowrap px-4 py-2 text-sm font-medium rounded-md bg-green-100 text-green-800">All Topics</button>
                            <button class="whitespace-nowrap px-4 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-100">Popular</button>
                            <button class="whitespace-nowrap px-4 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-100">Buy/Sell</button>
                            <button class="whitespace-nowrap px-4 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-100">Home & DIY</button>
                            <button class="whitespace-nowrap px-4 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-100">Neighborhood</button>
                        </div>
                    </div>
                </div>

                <!-- Discussion Threads -->
                <div class="space-y-4">
                    <!-- Thread Card -->
                    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-300">
                        <div class="p-6">
                            <div class="flex items-start">
                                <img class="h-16 w-16 rounded-full flex-shrink-0" src="~/image/forum.png" alt="User avatar">
                                <div class="ml-4 flex-1">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Buying & Selling</span>
                                            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Marketplace</span>
                                        </div>
                                        <button class="text-gray-400 hover:text-gray-500">
                                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                                            </svg>
                                        </button>
                                    </div>
                                    <h3 class="mt-2 text-lg font-medium text-gray-900">Looking to buy gently used furniture</h3>
                                    <p class="mt-1 text-gray-600">Moving into a new apartment and looking for quality used furniture - especially a sofa and dining set. Budget friendly options preferred.</p>
                                    <div class="mt-4 flex items-center justify-between">
                                        <div class="flex items-center text-sm text-gray-500">
                                            <span>Maria Garcia</span>
                                            <span class="mx-1">•</span>
                                            <span>2 weeks ago</span>
                                        </div>
                                        <div class="flex space-x-4">
                                            <span class="inline-flex items-center text-sm text-gray-500">
                                                <svg class="mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                                </svg>
                                                1,024
                                            </span>
                                            <span class="inline-flex items-center text-sm text-gray-500">
                                                <svg class="mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                    <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
                                                </svg>
                                                839
                                            </span>
                                            <span class="inline-flex items-center text-sm text-gray-500">
                                                <svg class="mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                    <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd" />
                                                </svg>
                                                742
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Thread Cards (similar structure) -->
                    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-300">
                        <!-- Home & DIY Forum Thread -->
                    </div>

                    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-300">
                        <!-- Neighborhood Talk Thread -->
                    </div>

                    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-300">
                        <!-- Mortgage Forum Thread -->
                    </div>

                    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-300">
                        <!-- Home Decor Thread -->
                    </div>
                </div>

                <!-- Pagination -->
                <div class="mt-8 flex items-center justify-between">
                    <button class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                        Previous
                    </button>
                    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-center">
                        <div>
                            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
